{
  "name": "vite-plugin-svelte-anywhere",
  "version": "0.0.0-development",
  "description": "Use Svelte components anywhere",
  "main": "dist/index.js",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts && mkdir -p dist/templates && cp src/templates/*.template dist/templates",
    "dev": "concurrently \"npm run demo:dev\" \"npm run docs:dev\"",
    "semantic-release": "semantic-release",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "demo:dev": "npm run dev -w demo",
    "demo:build": "npm run build -w demo",
    "test": "vitest"
  },
  "keywords": [
    "vite",
    "svelte",
    "vite-plugin",
    "custom-elements",
    "shadow-dom",
    "web-components"
  ],
  "author": "Felix<https://github.com/vidschofelix>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/vidschofelix/vite-plugin-svelte-anywhere.git"
  },
  "bugs": {
    "url": "https://github.com/vidschofelix/vite-plugin-svelte-anywhere/issues"
  },
  "homepage": "https://svelte-anywhere.dev",
  "devDependencies": {
    "@types/node": "^24.0.10",
    "concurrently": "^9.1.2",
    "cpx2": "^8.0.0",
    "eslint": "^9.33.0",
    "memfs": "^4.17.0",
    "semantic-release": "^24.2.1",
    "svelte": "^5.0.0",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "vite": "^7.1.1",
    "vitepress": "^1.6.3",
    "vitepress-plugin-llms": "^1.7.2",
    "vitest": "^3.0.4"
  },
  "peerDependencies": {
    "svelte": "^5.0.0",
    "vite": "^6.0.0 || ^7.0.0"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "workspaces": [
    "demo",
    "."
  ]
}
