{
  "name": "vite-plugin-svelte-anywhere",
  "version": "0.0.0-development",
  "description": "Take Svelte anywhere, no matter the stack.",
  "main": "dist/index.js",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts && mkdir -p dist/templates && cp src/templates/*.template dist/templates",
    "build-local": "tsup src/index.ts --format esm --dts && cpx src/templates/**.template dist/templates",
    "semantic-release": "semantic-release",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "demo:dev": "cd demo && npm run dev",
    "demo:build": "cd demo && npm run build",
    "test": "vitest"
  },
  "keywords": [
    "vite",
    "svelte",
    "vite-plugin",
    "custom-elements",
    "shadow-dom",
    "web-components"
  ],
  "author": "Felix<https://github.com/vidschofelix>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/vidschofelix/vite-plugin-svelte-anywhere.git"
  },
  "bugs": {
    "url": "https://github.com/vidschofelix/vite-plugin-svelte-anywhere/issues"
  },
  "homepage": "https://github.com/vidschofelix/vite-plugin-svelte-anywhere#readme",
  "devDependencies": {
    "@types/node": "^22.10.10",
    "cpx2": "^8.0.0",
    "eslint": "^8.0.0",
    "memfs": "^4.17.0",
    "semantic-release": "^24.2.1",
    "svelte": "^5.0.0",
    "tsup": "^6.0.0",
    "typescript": "^5.0.0",
    "vite": "^6.0.5",
    "vitepress": "^1.6.3",
    "vitest": "^3.0.4"
  },
  "peerDependencies": {
    "svelte": "^5.0.0",
    "vite": "^6.0.0"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "workspaces": [
    "demo",
    "."
  ]
}
